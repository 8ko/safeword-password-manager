{
  "manifest_version": 3,
  "name": "SafeWord",
  "author": "8ko",
  "version": "1.0.0",
  "description": "Password manager and vault for your stuff",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png",
    "192": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icons": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png",
      "192": "logo192.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ]
}